<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/phone_item_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/phone_icon_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_phone_iphone_48pt_2x" />

        <TextView
            android:id="@+id/phone_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_icon_view"
            android:layout_centerHorizontal="true"
            android:text="name" />
    </RelativeLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/phone_item_left_layout">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phone_number_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_left"/>
            <TextView
                android:id="@+id/phone_number_left_view"
                android:layout_toRightOf="@id/phone_number_left_tv"
                android:layout_width="wrap_content"
                android:text="10"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phone_number_lend_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_lend"/>
            <TextView
                android:id="@+id/phone_number_lend_view"
                android:layout_toRightOf="@id/phone_number_lend_tv"
                android:layout_width="wrap_content"
                android:text="10"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phone_names_lend_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_names_lend"/>
            <TextView
                android:id="@+id/phone_name_lend_view"
                android:layout_toRightOf="@id/phone_names_lend_tv"
                android:layout_width="wrap_content"
                android:text="wuliqing "
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>